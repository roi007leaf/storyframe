<div class="storyframe-container">
  <div class="storyframe-header">
    <div class="journal-selector">
      <label>Journal:</label>
      <select name="journal" id="journal-selector">
        <option value="">-- Select Journal --</option>
        {{#each journals}}
          <option value="{{this.id}}" {{#if (eq this.id ../selectedJournal)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="header-actions">
      <button type="button" data-action="toggleSidebar" title="Toggle Characters Sidebar">
        <i class="fas fa-users"></i>
      </button>
    </div>
  </div>

  <div class="two-column-layout">
  <!-- Left: Page TOC -->
  <div class="page-toc">
    <div class="toc-header">
      <input type="text"
             name="page-search"
             placeholder="Search Pages"
             data-action="searchPages"
             autocomplete="off">
    </div>
    <div class="page-list">
      {{#if pages.length}}
        {{#each pages}}
          <div class="page-item level{{this.level}} {{#if (eq @index ../currentPageIndex)}}selected{{/if}}"
               data-action="selectPage"
               data-page-index="{{@index}}"
               title="{{this.name}}">
            <span class="page-name">{{this.name}}</span>
          </div>
        {{/each}}
      {{else}}
        <div class="empty-state">
          {{#if selectedJournal}}
            No pages found
          {{else}}
            Select a journal above
          {{/if}}
        </div>
      {{/if}}
    </div>
  </div>

  <!-- Middle: Content Area -->
  <section class="content-area journal-entry-content flexcol">
    {{#if currentPageContent}}
      <!-- Module classes only on the journal content wrapper -->
      <div class="journal-entry-pages single-page journal-sheet journal-entry themed theme-light {{containerClasses}}">
        <div class="scrollable">
          <article class="journal-entry-page {{pageType}} {{#if pageLevel}}level{{pageLevel}}{{/if}}" data-page-type="{{pageType}}">
            <header class="journal-page-header">
              {{#if (eq pageLevel 1)}}
                <h1>{{currentPageName}}</h1>
              {{else}}
                <h2>{{currentPageName}}</h2>
              {{/if}}
            </header>
            <section class="journal-page-content">
              {{{currentPageContent}}}
            </section>
          </article>
        </div>
      </div>
    {{else}}
      <div class="empty-state">
        <p>No page selected</p>
        <p>Select a journal and page to view content</p>
      </div>
    {{/if}}
  </section>
</div>
</div>
